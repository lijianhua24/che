<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="125.5dp"
            android:background="@mipmap/loginin_bg" />

        <TextView
            android:id="@+id/car_login_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38.5dp"
            android:layout_marginRight="30.5dp"
            android:text="注册"
            android:textColor="@color/bai"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="35.5dp"
        android:text="嗨,请先登录"
        android:textColor="@color/lan"
        android:textSize="29sp" />

    <RelativeLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="71dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_phone"
            android:layout_marginLeft="37.5dp"
            android:layout_marginTop="3dp"
            android:background="@mipmap/loginin_iphone"
            android:layout_width="15dp"
            android:layout_height="17dp"/>
        <EditText
            android:id="@+id/car_login_phone"
            android:background="@null"
            android:textSize="16sp"
            android:layout_toRightOf="@id/login_phone"
            android:layout_marginLeft="15.5dp"
            android:hint="请输入手机号"
            android:textColorHint="#CCCCCC"
            android:singleLine="true"
            android:phoneNumber="true"
            android:textColor="#222337"
            android:layout_width="230.5dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/car_login_cw"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44.5dp"
            android:layout_marginTop="7dp"
            android:background="@mipmap/loginin_guanbi"
            android:layout_width="12dp"
            android:layout_height="12dp"/>
    </RelativeLayout>
    <TextView
        android:background="@drawable/line"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginRight="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="37dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_suo"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="3dp"
            android:background="@mipmap/loginin_password"
            android:layout_width="18dp"
            android:layout_height="19dp"/>
        <EditText
            android:id="@+id/car_login_pwd"
            android:background="@null"
            android:textSize="16sp"
            android:layout_toRightOf="@id/login_suo"
            android:layout_marginLeft="11dp"
            android:hint="请输入密码"
            android:password="true"
            android:textColorHint="#CCCCCC"
            android:singleLine="true"
            android:textColor="#222337"
            android:layout_width="230.5dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/car_login_by"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44.5dp"
            android:layout_marginTop="7dp"
            android:background="@mipmap/login_biyan"
            android:layout_width="12dp"
            android:layout_height="12dp"/>
    </RelativeLayout>
    <TextView
        android:background="@drawable/line"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="13.5dp"
        android:layout_marginRight="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="19.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/car_lgin_code"
            android:text="验证码登录"
            android:textSize="15sp"
            android:textColor="#222337"
            android:layout_marginLeft="33.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/car_login_forget"
            android:text="忘记密码?"
            android:textColor="#CCCCCC"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/car_login_bt"
        android:text="登录"
        android:background="@drawable/yuanjiao"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:textColor="#BDBDBD"
        android:layout_width="315dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/car_login_wx"
        android:layout_gravity="center"
        android:layout_marginTop="102.5dp"
        android:background="@mipmap/loginin_weixin"
        android:layout_width="25dp"
        android:layout_height="21dp"/>
</LinearLayout>